#!/usr/bin/env node

var nopt   = require('nopt'),
    fs     = require('fs'),
    path   = require('path'),
    tty    = require('tty'),
    Vault  = require('../lib/vault'),
    CONFIG = process.env.HOME + '/.vault',
    
    options = { 'config': Boolean,
                'phrase': String,
                'length': Number,
                'lower':  Boolean,
                'upper':  Boolean,
                'alpha':  Boolean,
                'number': Boolean,
                'space':  Boolean,
                'dash':   Boolean,
                'symbol': Boolean
              },
    
    shorts  = { 'c': '--config',
                'p': '--phrase',
                'l': '--length'
              },
    
    params  = nopt(options, shorts),
    service = params.argv.remain[0];

var extend = function(target, source) {
  for (var key in source) {
    if (target[key] === undefined) target[key] = source[key];
  }
  return target;
};

var editConfig = function(transform) {
  fs.readFile(CONFIG, function(error, data) {
    var config = error ? {services: {}} : JSON.parse(data.toString());
    transform(config);
    fs.writeFile(CONFIG, JSON.stringify(config, true, 2), function(error) {
      if (error) console.error('Error writing file: ' + CONFIG);
      process.exit(error ? 1 : 0);
    });
  });
};

var readConfig = function(service) {
  var config = {};
  try {
    var data = JSON.parse(fs.readFileSync(CONFIG).toString());
    config.phrase = data.phrase;
    if (data.services[service]) extend(config, data.services[service]);
  } catch (e) {}
  return config;
};

if (params.config) {
  delete params.config;
  
  editConfig(function(settings) {
    if (params.phrase) settings.phrase = params.phrase;
    
    if (!service) return;
    settings.services[service] = settings.services[service] || {};
    
    for (var key in params) {
      if (typeof params[key] === 'boolean')
        settings.services[service][key] = params[key];
    }
  });

} else {
  extend(params, readConfig(service));
  
  if (params.phrase === undefined) {
    console.error('Passphrase is not defined; pass `-p PHRASE` or run `vault -cp PHRASE`');
    process.exit(1);
  }

  if (service === undefined) {
    console.error('Service is undefined');
    process.exit(1);
  }

  var vault    = new Vault(params),
      password = vault.generate(service);
  
  process.stdout.write(password);
  if (tty.isatty(1)) process.stdout.write('\n');
  process.exit(0);
}

